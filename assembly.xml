<assembly>
    <id>project</id>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>/</outputDirectory>
            <useDefaultExcludes>false</useDefaultExcludes>
            <includes>
                <include>config/**</include>
                <include>database/**</include>
                <include>images/**</include>
                <include>import/**</include>
                <include>lib/**</include>
                <include>logs/**</include>
                <include>xsd/**</include>
                <include>xsl/**</include>
                <include>?DS_Store</include>
                <include>log4j.properties</include>
                <include>README.md</include>
                <include>*.jar</include>
            </includes>
            <!-- Exclude the files that are only used for testing -->
            <!-- Probably should consider using <dependencySet> for libraries
                 This would hopefully not include JARs with test scope.  -->
            <excludes>
                <exclude>lib/mysql-connector-mxj-*.jar</exclude>
                <exclude>lib/junit-*.jar</exclude>
                <exclude>*.exe</exclude>
                <exclude>jre/**</exclude>
            </excludes>
        </fileSet>
        <!-- Include the SDFManager JAR -->
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
