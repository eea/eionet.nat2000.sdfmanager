<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<!-- Created by charbda 20/04/2011 -->
<hibernate-mapping>
  <class name="pojos.RefCategory" table="ref_category">
    <id name="refCategoryId" type="int">
      <column name="CATEGORY_ID"/>
      <generator class="increment"/>
    </id>
    <property name="refCategoryName" type="string">
      <column length="256" name="CATEGORY_NAME"/>
    </property>
    <property name="refCategoryCode" type="string">
      <column length="1" name="CATEGORY_CODE"/>
    </property>
    <property name="refCategorySpecies" type="string">
      <column length="1" name="CATEGORY_SPECIES"/>
    </property>
  </class>
</hibernate-mapping>