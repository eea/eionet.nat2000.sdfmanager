<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<!-- Created by charbda 20/04/2011 -->
<hibernate-mapping>
  <class name="pojos.RefUnit" table="ref_unit">
    <id name="refUnitId" type="int">
      <column name="UNIT_ID"/>
      <generator class="increment"/>
    </id>
    <property name="refUnitName" type="string">
      <column length="256" name="UNIT_NAME"/>
    </property>
    <property name="refUnitCode" type="string">
      <column length="124" name="UNIT_CODE"/>
    </property>
  </class>
</hibernate-mapping>